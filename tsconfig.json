{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // Enable JavaScript checking without compiling
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    
    // Module system
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    
    // Strict type checking
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    
    // Path resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["core/*"],
      "@morphs/*": ["morphs/*"],
      "@features/*": ["features/*"],
      "@util/*": ["util/*"],
      "@observer/*": ["observer/*"],
      "@config/*": ["config/*"],
      "@styles/*": ["styles/*"],
      "@data/*": ["data/*"]
    },
    
    // JSDoc support
    "declaration": false,
    "declarationMap": false,
    
    // IDE support
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": [
    "src/**/*",
    "core/**/*.js",
    "morphs/**/*.js",
    "features/**/*.js",
    "util/**/*.js",
    "observer/**/*.js",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "data",
    "scripts"
  ]
}
